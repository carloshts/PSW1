<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CriaProduto</servlet-name>
        <servlet-class>CriarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscaProduto</servlet-name>
        <servlet-class>BuscaProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>criaPost</servlet-name>
        <servlet-class>criaPost</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buscaPostPorId</servlet-name>
        <servlet-class>buscaPostPorId</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buscaPostPorAutor</servlet-name>
        <servlet-class>buscaPostPorAutor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deletaPost</servlet-name>
        <servlet-class>deletaPost</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CriaProduto</servlet-name>
        <url-pattern>/CriaProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscaProduto</servlet-name>
        <url-pattern>/BuscaProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>criaPost</servlet-name>
        <url-pattern>/criaPost</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buscaPostPorId</servlet-name>
        <url-pattern>/buscaPostPorId</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buscaPostPorAutor</servlet-name>
        <url-pattern>/buscaPostPorAutor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deletaPost</servlet-name>
        <url-pattern>/deletaPost</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
